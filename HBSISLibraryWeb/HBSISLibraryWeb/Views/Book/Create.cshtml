@model HBSISLibraryWeb.ViewModels.BookDetailsViewModel

@{
    ViewBag.Title = "Novo";
}

<h2>Novo</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Livro</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ISBN, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ISBN)
                @Html.ValidationMessageFor(model => model.ISBN)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pages, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Pages)
                @Html.ValidationMessageFor(model => model.Pages)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, 4, 100, new { @style = "max-width: 60%; width: 60%;" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SelectedPublisher, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SelectedPublisher, new SelectList(Model.PublisherList, "Id", "PublisherName"))
                @Html.ValidationMessageFor(model => model.SelectedPublisher)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SelectedAuthors, "Author(s)", new { @class = "control-label col-md-2" })
            @Html.ValidationMessageFor(model => model.SelectedAuthors)
            <div class ="col-md-10">
                @foreach (var item in Model.AuthorsList)
                {
                    <div class="checkbox">
                    <label>
                        <input type="checkbox"
                               name="SelectedAuthors"
                               value="@item.ID" /> @string.Format("{0} {1}", item.FirstName, item.LastName)
                        </label>
                    </div>
                }
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col -md-10">
                <input type="submit" value="Inserir" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
